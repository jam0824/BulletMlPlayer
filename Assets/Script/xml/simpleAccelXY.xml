<?xml version="1.0" ?>
<bulletml type="horizontal">

<!-- シンプルで分かりやすい水平加速テスト（左右に見える） -->
<bullet label="horizontalAccelDemo">
  <action>
    <!-- 最初は真上にゆっくり移動 -->
    <wait>60</wait>
    <!-- 右方向に強い加速度を加える -->
    <accel>
      <horizontal type="absolute">0.4</horizontal>
      <term>120</term>
    </accel>
  </action>
</bullet>

<!-- シンプルで分かりやすい垂直加速テスト -->
<bullet label="verticalAccelDemo">
  <action>
    <!-- 最初は真上にゆっくり移動 -->
    <wait>60</wait>
    <!-- 下方向に強い加速度を加える（重力のような効果） -->
    <accel>
      <vertical type="absolute">-0.3</vertical>
      <term>150</term>
    </accel>
  </action>
</bullet>

<!-- 対角線加速テスト（右下方向） -->
<bullet label="diagonalAccelDemo">
  <action>
    <!-- 最初は真上にゆっくり移動 -->
    <wait>60</wait>
    <!-- 右下方向に加速度を加える -->
    <accel>
      <horizontal type="absolute">0.35</horizontal>
      <vertical type="absolute">-0.25</vertical>
      <term>180</term>
    </accel>
  </action>
</bullet>

<!-- 左右振り子型加速テスト -->
<bullet label="pendulumAccelDemo">
  <action>
    <!-- 最初は真上にゆっくり移動 -->
    <wait>60</wait>
    <!-- 右方向に加速 -->
    <accel>
      <horizontal type="absolute">0.4</horizontal>
      <term>60</term>
    </accel>
    <wait>30</wait>
    <!-- 左方向に強い加速（方向転換） -->
    <accel>
      <horizontal type="absolute">-0.6</horizontal>
      <term>80</term>
    </accel>
    <wait>40</wait>
    <!-- 再び右方向に加速 -->
    <accel>
      <horizontal type="absolute">0.5</horizontal>
      <term>60</term>
    </accel>
  </action>
</bullet>

<!-- 重力効果デモ（放物線） -->
<bullet label="gravityDemo">
  <action>
    <!-- 初期速度を上向きに設定 -->
    <changeSpeed>
      <speed type="absolute">5.0</speed>
      <term>1</term>
    </changeSpeed>
    <changeDirection>
      <direction type="absolute">90</direction>
      <term>1</term>
    </changeDirection>
    <wait>10</wait>
    <!-- 重力のような下向き加速度 -->
    <accel>
      <vertical type="absolute">-0.2</vertical>
      <term>300</term>
    </accel>
  </action>
</bullet>

<!-- 螺旋型加速テスト -->
<bullet label="spiralAccelDemo">
  <action>
    <!-- 最初は真上にゆっくり移動 -->
    <wait>60</wait>
    <!-- 右回りの螺旋加速 -->
    <accel>
      <horizontal type="absolute">0.3</horizontal>
      <term>50</term>
    </accel>
    <wait>20</wait>
    <accel>
      <vertical type="absolute">-0.2</vertical>
      <term>50</term>
    </accel>
    <wait>20</wait>
    <accel>
      <horizontal type="absolute">-0.4</horizontal>
      <term>50</term>
    </accel>
    <wait>20</wait>
    <accel>
      <vertical type="absolute">0.3</vertical>
      <term>50</term>
    </accel>
  </action>
</bullet>

<!-- メインアクション（1つずつ発射して違いが分かりやすい） -->
<action label="top">
  
  <!-- 水平加速デモ（右にカーブ） -->
  <fire>
    <direction type="absolute">90</direction>
    <speed>1.5</speed>
    <bulletRef label="horizontalAccelDemo"/>
  </fire>
  <wait>300</wait>
  
  <!-- 垂直加速デモ（上がって落ちる） -->
  <fire>
    <direction type="absolute">90</direction>
    <speed>1.5</speed>
    <bulletRef label="verticalAccelDemo"/>
  </fire>
  <wait>300</wait>
  
  <!-- 対角線加速デモ（右下にカーブ） -->
  <fire>
    <direction type="absolute">90</direction>
    <speed>1.2</speed>
    <bulletRef label="diagonalAccelDemo"/>
  </fire>
  <wait>350</wait>
  
  <!-- 振り子加速デモ（左右に振動） -->
  <fire>
    <direction type="absolute">90</direction>
    <speed>1.0</speed>
    <bulletRef label="pendulumAccelDemo"/>
  </fire>
  <wait>400</wait>
  
  <!-- 重力効果デモ（放物線） -->
  <fire>
    <direction type="absolute">90</direction>
    <speed>0.5</speed>
    <bulletRef label="gravityDemo"/>
  </fire>
  <wait>400</wait>
  
  <!-- 螺旋加速デモ（四角い螺旋） -->
  <fire>
    <direction type="absolute">90</direction>
    <speed>1.0</speed>
    <bulletRef label="spiralAccelDemo"/>
  </fire>
  
</action>

</bulletml>